<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">

            <solid android:color="@android:color/transparent" />
            <padding
                android:bottom="@dimen/scrollthumb_padding_top_bottom"
                android:left="0dp"
                android:right="@dimen/scrollthumb_padding_right"
                android:top="@dimen/scrollthumb_padding_top_bottom" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/maia_pink" />
            <size
                android:width="@dimen/scrollthumb_size_width"
                android:height="@dimen/scrollthumb_size_height" />
        </shape>
    </item>

</layer-list>