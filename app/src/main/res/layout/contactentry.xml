<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <com.inlusion.controller.util.RoundedImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/entry_contactImage"
        android:src="@drawable/incoming_call_caller"
        android:scaleType="fitCenter"
        android:paddingTop="1px"
        android:paddingBottom="7px"
        android:layout_gravity="center_vertical"
        app:oval="true"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:paddingLeft="10dp"
        android:layout_gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Linas Martusevicius"
            android:id="@+id/entry_contactName"
            android:textSize="20dp"
            android:fontFamily="sans-serif-light"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+370 679 43120"
            android:id="@+id/entry_contactNumber"
            android:textSize="18dp"
            android:textColor="#adadad"/>
    </LinearLayout>

</LinearLayout>