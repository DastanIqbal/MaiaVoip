<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:background="@android:color/transparent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <com.inlusion.controller.util.RoundedImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/history_contactImage"
        android:src="@drawable/incoming_call_caller"
        android:scaleType="fitXY"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        app:oval="true"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:paddingLeft="15dp"
        android:layout_gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Linas Mpqpqpartuseius"
            android:id="@+id/history_contactName"
            android:textSize="20dp"
            android:fontFamily="sans-serif-light"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+370 679 43120"
            android:id="@+id/history_contactNumber"
            android:textSize="18dp"
            android:textColor="#adadad"
            android:layout_marginBottom="-3dp"
            android:layout_marginTop="-3dp"
            android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/history_arrow"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/arrow_call_in"
            android:scaleType="fitCenter"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\@ 00:00"
            android:id="@+id/history_time"
            android:textSize="18dp"
            android:textColor="#adadad"/>
    </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>