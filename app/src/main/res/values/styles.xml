<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar"></style>

    <style name="maia" parent="@style/_maia" />

    <style name="_maia" parent="android:Theme.Holo.Light.NoActionBar">

        <item name="android:textColorHighlight">#99f21a8f</item>
        <item name="android:textSelectHandleLeft">@drawable/maia_text_select_handle_left</item>
        <item name="android:textSelectHandleRight">@drawable/maia_text_select_handle_right</item>
        <item name="android:textSelectHandle">@drawable/maia_text_select_handle_middle</item>

        <item name="android:fastScrollOverlayPosition">atThumb</item>
        <item name="android:fastScrollThumbDrawable">@drawable/thumb_circle</item>
        <item name="android:fastScrollPreviewBackgroundRight">@drawable/scrollindex</item>

        <item name="android:editTextBackground">@color/maia_pink</item>
        <item name="android:textColorHint">@android:color/white</item>

        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:progressBarStyleHorizontal">@style/ProgressBarprogress</item>
    </style>

    <style name="grey" parent="@style/_grey" />

    <style name="_grey" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:editTextBackground">@drawable/grey_edit_text_holo_light</item>
    </style>

    <style name="ProgressBarprogress" parent="android:Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal_holo_light</item>
    </style>

    <style name="whiteTextField" parent="@android:style/Widget.EditText">
        <item name="android:textColorHighlight">#99f21a8f</item>
        <item name="android:textSelectHandleLeft">@drawable/maia_text_select_handle_left</item>
        <item name="android:textSelectHandleRight">@drawable/maia_text_select_handle_right</item>
        <item name="android:textSelectHandle">@drawable/maia_text_select_handle_middle</item>
        <item name="android:gravity">center</item>
        <item name="android:textColorHint">@color/control_grey_idle</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

</resources>